extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text', placeholder='Name (Vinson He)' name='name' required='true' value=(undefined===user ? '' : user.name) )
    div.form-group
      label(for='username') Username:
      input#username.form-control(type='email', placeholder='Email' name='username' required='true' value=(undefined===user ? '' : user.username))
    div.form-group 
      label(for='password') Password:
      input#password.form-control(type='password', placeholder='Password' name='password' required='true' value=(undefined===user ? '' : user.password))
      br
      label(for='confirmPassword') Confirm Password:
      input#confirmPassword.form-control(type='password', placeholder='Confirm Password' name='confirmPassword' required='true' value=(undefined===user ? '' : user.confirmPassword))
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg