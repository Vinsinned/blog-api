extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text', placeholder='Name' name='name' required='true' value=(undefined===comment ? '' : comment.name) )
      br
      label(for='text') Text:
      input#text.form-control(type='text', placeholder='Text' name='text' required='true' value=(undefined===comment ? '' : comment.text))
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg